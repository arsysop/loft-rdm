<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="ru.arsysop.loft.rgm.spec.workbench.commands.category.interchange"
            name="%commands.category.interchange.name">
      </category>
      <command
            categoryId="ru.arsysop.loft.rgm.spec.workbench.commands.category.interchange"
            defaultHandler="ru.arsysop.loft.rgm.internal.spec.workbench.handlers.ImportSpecHandler"
            id="ru.arsysop.loft.rgm.spec.workbench.commands.command.import.spec"
            name="%commands.command.import.spec.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="true"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="ru.arsysop.loft.rgm.spec.workbench.commands.command.import.spec"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <iterate
                        ifEmpty="false"
                        operator="or">
                     <instanceof
                           value="ru.arsysop.loft.rgm.spec.model.api.Document">
                     </instanceof>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="ru.arsysop.loft.rgm.internal.spec.workbench.BrowserView"
            icon="platform:/plugin/org.eclipse.ui.browser/icons/obj16/internal_browser.png"
            id="ru.arsysop.loft.rgm.markup.editor.browser"
            name="%view.browser.name"
            restorable="true">
      </view>
      <category
            id="ru.arsysop.loft.rgm.markup.editor.category"
            name="%category.name">
      </category>
   </extension>

</plugin>
